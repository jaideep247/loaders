<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="validationStatsDialog"
        title="Validation Statistics"
        contentWidth="400px"
    >
        <content>
            <VBox
                id="_IDGenVBox4"
                class="sapUiSmallMargin"
            >
                <Title
                    id="_IDGenTitle4"
                    text="Summary"
                    class="sapUiSmallMarginTopBottom"
                />
                <FlexBox
                    id="_IDGenFlexBox"
                    justifyContent="SpaceAround"
                    class="sapUiSmallMarginBottom"
                >
                    <VBox
                        id="_IDGenVBox1"
                        alignItems="Center"
                    >
                        <Text
                            id="_IDGenText"
                            text="Total"
                        />
                        <ObjectNumber
                            id="_IDGenObjectNumber"
                            number="{stats>/total}"
                        />
                    </VBox>
                    <VBox
                        id="_IDGenVBox2"
                        alignItems="Center"
                    >
                        <Text
                            id="_IDGenText1"
                            text="Valid"
                        />
                        <ObjectNumber
                            id="_IDGenObjectNumber1"
                            number="{stats>/successful}"
                            state="Success"
                        />
                    </VBox>
                    <VBox
                        id="_IDGenVBox3"
                        alignItems="Center"
                    >
                        <Text
                            id="_IDGenText2"
                            text="Invalid"
                        />
                        <ObjectNumber
                            id="_IDGenObjectNumber2"
                            number="{stats>/failed}"
                            state="Error"
                        />
                    </VBox>
                </FlexBox>

                <Title
                    id="_IDGenTitle5"
                    text="Validation Rate"
                    class="sapUiSmallMarginTopBottom"
                />
                <ProgressIndicator
                    id="_IDGenProgressIndicator"
                    percentValue="{stats>/successRate}"
                    displayValue="{stats>/successRate}% Valid"
                    state="{= ${stats>/failed} > 0 ? (${stats>/successful} > 0 ? 'Warning' : 'Error') : 'Success' }"
                    width="100%"
                    height="2rem"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                id="_IDGenButton1"
                text="Close"
                press=".onValidationStatsDialogClose"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
