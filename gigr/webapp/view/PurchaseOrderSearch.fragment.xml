<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="purchaseOrderSearchDialog"
        title="Search Purchase Orders"
        contentWidth="60%"
        contentHeight="60%"
        resizable="true"
        draggable="true"
    >
        <content>
            <VBox
                id="_IDGenVBox17"
                class="sapUiSmallMargin"
            >
                <SearchField
                    id="poSearchField"
                    placeholder="Search by PO Number, Supplier..."
                    search="onPurchaseOrderSearch"
                    width="100%"
                />
                <Table
                    id="purchaseOrderTable"
                    items="{/purchaseOrders}"
                    growing="true"
                    growingThreshold="15"
                    mode="SingleSelectMaster"
                    selectionChange="onPurchaseOrderSelected"
                    sticky="ColumnHeaders"
                    class="sapUiSmallMarginTop"
                >
                    <columns>
                        <Column
                            id="_IDGenColumn17"
                            width="15%"
                        >
                            <Text
                                id="_IDGenText12"
                                text="Purchase Order"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn18"
                            width="20%"
                        >
                            <Text
                                id="_IDGenText13"
                                text="Supplier"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn19"
                            width="15%"
                        >
                            <Text
                                id="_IDGenText14"
                                text="Document Date"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn20"
                            width="15%"
                        >
                            <Text
                                id="_IDGenText15"
                                text="Net Value"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn21"
                            width="15%"
                        >
                            <Text
                                id="_IDGenText16"
                                text="Currency"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn22"
                            width="20%"
                        >
                            <Text
                                id="_IDGenText17"
                                text="Purchasing Group"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            id="_IDGenColumnListItem5"
                            type="Active"
                        >
                            <cells>
                                <Text
                                    id="_IDGenText18"
                                    text="{PurchaseOrder}"
                                />
                                <Text
                                    id="_IDGenText19"
                                    text="{Supplier} - {SupplierName}"
                                />
                                <Text
                                    id="_IDGenText50"
                                    text="{path: 'DocumentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' }}"
                                />
                                <Text
                                    id="_IDGenText53"
                                    text="{NetPriceAmount}"
                                />
                                <Text
                                    id="_IDGenText54"
                                    text="{DocumentCurrency}"
                                />
                                <Text
                                    id="_IDGenText55"
                                    text="{PurchasingGroup}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <buttons>
            <Button
                id="_IDGenButton"
                text="Cancel"
                press="onPurchaseOrderDialogClose"
            />
            <Button
                id="_IDGenButton11"
                text="Select"
                press="onPurchaseOrderDialogSelect"
                type="Emphasized"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
