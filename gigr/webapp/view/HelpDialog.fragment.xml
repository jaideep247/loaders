<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helpDialog"
        title="GIGR Document Excel Upload Help"
        contentWidth="600px"
    >
        <content>
            <IconTabBar
                id="helpTabBar"
                expanded="true"
            >
                <items>
                    <IconTabFilter
                        id="gettingStartedTab"
                        icon="sap-icon://hint"
                        text="Getting Started"
                    >
                        <content>
                            <VBox
                                id="_IDGenVBox12"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            >
                                <items>
                                    <Title
                                        id="_IDGenTitle3"
                                        text="How to Upload GIGR Documents"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <Text
                                        id="_IDGenText38"
                                        text="1. Download the template using the 'Download Template' button."
                                        class="sapUiTinyMarginTop"
                                    />
                                    <Text
                                        id="_IDGenText39"
                                        text="2. Fill in the template with your GIGR document data."
                                    />
                                    <Text
                                        id="_IDGenText40"
                                        text="3. Upload the completed file using the 'Choose File' button."
                                    />
                                    <Text
                                        id="_IDGenText41"
                                        text="4. Review validation results and fix any errors."
                                    />
                                    <Text
                                        id="_IDGenText42"
                                        text="5. Click 'Submit GIGR Documents' to process valid entries."
                                    />
                                </items>
                            </VBox>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        id="commonErrorsTab"
                        icon="sap-icon://alert"
                        text="Common Errors"
                    >
                        <content>
                            <List id="_IDGenList1">
                                <items>
                                    <StandardListItem
                                        id="_IDGenStandardListItem1"
                                        title="Missing Material"
                                        description="Material number is required for each GIGR document."
                                    />
                                    <StandardListItem
                                        id="_IDGenStandardListItem3"
                                        title="Missing Required Fields"
                                        description="All required fields must be filled in for each entry."
                                    />
                                    <StandardListItem
                                        id="_IDGenStandardListItem5"
                                        title="Invalid Date Format"
                                        description="Dates should be in YYYY-MM-DD format."
                                    />
                                    <StandardListItem
                                        id="_IDGenStandardListItem6"
                                        title="Invalid Goods Movement Type"
                                        description="Goods Movement Type must be valid for the GIGR document type."
                                    />
                                    <StandardListItem
                                        id="_IDGenStandardListItem7"
                                        title="Missing Storage Location"
                                        description="Storage Location is required for most goods movements."
                                    />
                                    <StandardListItem
                                        id="_IDGenStandardListItem8"
                                        title="Missing WBS Element"
                                        description="WBS Element is required for account assignment."
                                    />
                                </items>
                            </List>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        id="fileFormatTab"
                        icon="sap-icon://attachment-text-file"
                        text="File Format"
                    >
                        <content>
                            <VBox
                                id="_IDGenVBox13"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            >
                                <items>
                                    <Text
                                        id="_IDGenText43"
                                        text="The Excel file should contain the following columns:"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <Panel
                                        id="_IDGenPanel5"
                                        headerText="Required Fields"
                                        expandable="true"
                                        expanded="true"
                                    >
                                        <content>
                                            <List id="_IDGenList3">
                                                <items>
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem9"
                                                        title="Sequence Number: Line sequence number"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem10"
                                                        title="GRN Document Number: GRN document number"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem11"
                                                        title="Document Date: Document date (YYYY-MM-DD)"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem12"
                                                        title="Posting Date: Posting date (YYYY-MM-DD)"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem13"
                                                        title="Material: Material number"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem14"
                                                        title="Plant: Plant code"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem15"
                                                        title="Storage Location: Storage location code"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem16"
                                                        title="Goods Movement Type: Movement type code"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem17"
                                                        title="Quantity In Entry Unit: Quantity to be processed"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem18"
                                                        title="WBS Element: Work breakdown structure element"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem19"
                                                        title="GL Account: General ledger account"
                                                    />
                                                </items>
                                            </List>
                                        </content>
                                    </Panel>
                                    <Panel
                                        id="_IDGenPanel6"
                                        headerText="Optional Fields"
                                        expandable="true"
                                        expanded="false"
                                        class="sapUiTinyMarginTop"
                                    >
                                        <content>
                                            <List id="_IDGenList4">
                                                <items>
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem20"
                                                        title="Material Document Header Text: Document header text"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem21"
                                                        title="MaterialDocumentItemText: Item text"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem22"
                                                        title="Account Assignment: Account assignment details"
                                                    />
                                                    <StandardListItem
                                                        id="_IDGenStandardListItem23"
                                                        title="Special Stock: Special stock indicator"
                                                    />
                                                </items>
                                            </List>
                                        </content>
                                    </Panel>
                                    <Link
                                        id="_IDGenLink"
                                        text="Download Sample Template"
                                        press=".onDownloadTemplate"
                                        class="sapUiSmallMarginTop"
                                    />
                                </items>
                            </VBox>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        id="processingRulesTab"
                        icon="sap-icon://process"
                        text="Processing Rules"
                    >
                        <content>
                            <VBox
                                id="_IDGenVBox14"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            >
                                <items>
                                    <Title
                                        id="_IDGenTitle4"
                                        text="GIGR Document Processing Rules"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <Text
                                        id="_IDGenText57"
                                        text="Each GIGR document must follow these rules:"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <List id="_IDGenList5">
                                        <items>
                                            <StandardListItem
                                                id="_IDGenStandardListItem24"
                                                title="Valid Material"
                                                description="Material must exist in the system and be valid for the specified plant."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem25"
                                                title="Valid Storage Location"
                                                description="Storage location must exist for the specified plant."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem26"
                                                title="Valid Goods Movement Type"
                                                description="Movement type must be appropriate for the type of transaction being performed."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem27"
                                                title="Valid WBS Element"
                                                description="WBS Element must be valid and active."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem28"
                                                title="Valid GL Account"
                                                description="GL Account must be valid for the transaction."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem29"
                                                title="Positive Quantity"
                                                description="Quantity must be greater than zero."
                                            />
                                            <StandardListItem
                                                id="_IDGenStandardListItem30"
                                                title="Proper Account Assignment"
                                                description="Account assignment must be complete when required."
                                            />
                                        </items>
                                    </List>
                                </items>
                            </VBox>
                        </content>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <beginButton>
            <Button
                id="_IDGenButton13"
                text="Close"
                press=".onHelpDialogClose"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
