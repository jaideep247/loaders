<mvc:View
    controllerName="customervendor.controller.Customer_Vendor"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <!-- 
    ============================================================
    DOCUMENTATION: CUSTOMER VENDOR JOURNAL ENTRY UPLOAD
    ============================================================
    
    PURPOSE:
    This view provides an interface for uploading Excel files containing journal entries,
    validating them, and submitting them to SAP.
    
    MAIN COMPONENTS:
    1. Upload Section - For selecting and uploading Excel files
    2. Batch Processing - Shows detailed batch processing information for large uploads
    3. Filters Panel - Filtering options for the journal entries
    4. Journal Entries Table - Displays and allows manipulation of entries
    5. Action Buttons - For submitting, retrying validation, or clearing entries
    
    FILE FORMAT REQUIREMENTS:
    - Excel (.xlsx) with sheets: Header, Vendor Lines, and Customer Lines
    - Required columns:
      * Header: Sequence ID, Accounting Document Type, Document Reference ID, Document Header Text,
                Company Code, Document Date, Posting Date
      * Vendor/Customer Lines: Sequence ID, Reference Document Item, Indicator (S-Dr, H-Cr.),
                Vendor Code/Customer Code, Currency, Amount, Assignment, Reference Key-1, Reference Key-3, 
                Item Text, Business Place
    
    WORKFLOW:
    1. Download template (optional)
    2. Upload Excel file
    3. Review validation results
    4. Filter/examine entries as needed
    5. Submit valid entries
    
    ============================================================
    -->
    <Page
        id="journalEntryPage"
        title="Customer Vendor Journal Entries"
        showFooter="true"
    >
        <!-- User Information Display - Read Only -->
        <Label
            id="userInfoLabel"
            text="Current User:"
            class="sapUiTinyMarginEnd"
        />
        <ObjectStatus
            id="userNameStatus"
            text="{userInfo>/displayName}"
            state="Information"
            icon="sap-icon://person-placeholder"
            class="sapUiMediumMarginEnd"
        />
        <ToolbarSpacer id="_IDGenToolbarSpacer5" />
        <!-- Information Toolbar -->
        <Toolbar
            id="infoToolbar"
            class="sapUiTinyMarginBottom"
        >
            <ToolbarSpacer id="_IDGenToolbarSpacer4" />

            <SearchField
                id="entriesSearchField"
                width="30%"
                search="onSearchEntries"
                liveChange="onLiveSearch"
                placeholder="Search entries (ID, Customer/Vendor Code, Assignment, or Status)"
                showRefreshButton="true"
            />
        </Toolbar>

        <headerContent>
            <Text
                id="infoText"
                text="Click for instructions on uploading customer-vendor journal entries from Excel to SAP."
            />
            <Button
                id="helpButton"
                icon="sap-icon://sys-help"
                tooltip="Help"
                press="onShowHelp"
            />
        </headerContent>
        <content>
            <VBox
                id="mainUploadContainer"
                class="sapUiResponsiveMargin"
            >
                <!-- Upload Section -->
                <Panel
                    id="uploadPanel"
                    headerText="Post Customer Vendor Journal Entries"
                    expandable="true"
                    expanded="true"
                >
                    <content>
                        <HBox
                            id="uploadControlsBox"
                            alignItems="Center"
                            justifyContent="SpaceBetween"
                            class="sapUiSmallMarginBottom"
                        >
                            <VBox
                                id="_IDGenVBox1"
                                width="60%"
                            >
                                <unified:FileUploader
                                    id="fileUploader"
                                    width="100%"
                                    placeholder="Choose Excel File (.xlsx)"
                                    change="onFileChange"
                                    buttonText="Browse"
                                    fileType="xlsx"
                                    style="Emphasized"
                                    icon="sap-icon://upload"
                                    name="journalEntryUpload"
                                />
                                <Text
                                    id="fileFormatHelper"
                                    text="Please upload Excel file with Header, Vendor Lines and Customer Lines sheets"
                                    class="sapUiTinyMarginTop"
                                />
                            </VBox>
                            <Button
                                id="downloadTemplateBtn"
                                text="Download Template"
                                press="onDownloadTemplate"
                                type="Emphasized"
                                icon="sap-icon://download"
                            />
                        </HBox>
                    </content>
                </Panel>

                <!-- Batch Processing Display Container -->
                <Panel
                    id="batchProcessingDisplayContainer"
                    headerText="Batch Processing Details"
                    expandable="true"
                    expanded="true"
                    visible="{= ${uploadSummary>/isSubmitting} === true}"
                >
                    <!-- Batch processing display will be added here -->
                </Panel>

                <!-- Enhanced Filters Panel with multiple filter options -->
                <Panel
                    id="filtersPanel"
                    headerText="Filters"
                    expandable="true"
                    expanded="false"
                >
                    <content>
                        <l:Grid
                            id="filtersGrid"
                            defaultSpan="L4 M6 S12"
                            class="sapUiSmallMargin"
                        >
                            <!-- Status Filter -->
                            <VBox
                                id="statusFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData1"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="statusFilterLabel"
                                    text="Status"
                                    design="Bold"
                                />
                                <ComboBox
                                    id="statusFilterComboBox"
                                    width="100%"
                                    items="{
                        path: 'statusModel>/',
                        templateShareable: false
                    }"
                                    selectionChange="onStatusFilterChange"
                                    placeholder="Filter by Status"
                                >
                                    <core:Item
                                        id="_IDGenItem"
                                        text="{statusModel>text}"
                                        key="{statusModel>key}"
                                    />
                                </ComboBox>
                            </VBox>

                            <!-- Line Type Filter -->
                            <VBox
                                id="lineTypeFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData2"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="lineTypeFilterLabel"
                                    text="Line Type"
                                    design="Bold"
                                />
                                <ComboBox
                                    id="lineTypeFilterComboBox"
                                    width="100%"
                                    selectionChange="onLineTypeFilterChange"
                                    placeholder="Filter by Line Type"
                                >
                                    <core:Item
                                        id="allLineTypesItem"
                                        text="All Lines"
                                        key="All"
                                    />
                                    <core:Item
                                        id="vendorLineItem"
                                        text="Vendor Lines"
                                        key="Vendor"
                                    />
                                    <core:Item
                                        id="customerLineItem"
                                        text="Customer Lines"
                                        key="Customer"
                                    />
                                </ComboBox>
                            </VBox>

                            <!-- Indicator Filter -->
                            <VBox
                                id="indicatorFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData3"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="indicatorFilterLabel"
                                    text="Indicator"
                                    design="Bold"
                                />
                                <ComboBox
                                    id="indicatorFilterComboBox"
                                    width="100%"
                                    selectionChange="onIndicatorFilterChange"
                                    placeholder="Filter by Indicator"
                                >
                                    <core:Item
                                        id="allIndicators"
                                        text="All Indicators"
                                        key="All"
                                    />
                                    <core:Item
                                        id="debitIndicator"
                                        text="Debit (S)"
                                        key="S"
                                    />
                                    <core:Item
                                        id="creditIndicator"
                                        text="Credit (H)"
                                        key="H"
                                    />
                                </ComboBox>
                            </VBox>

                            <!-- Vendor Code Filter -->
                            <VBox
                                id="vendorCodeFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData5"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="vendorCodeLabel"
                                    text="Vendor Code"
                                    design="Bold"
                                />
                                <SearchField
                                    id="vendorCodeFilter"
                                    width="100%"
                                    placeholder="Filter by Vendor Code"
                                    liveChange="onVendorCodeFilterChange"
                                    showSearchButton="false"
                                />
                            </VBox>

                            <!-- Customer Code Filter -->
                            <VBox
                                id="customerCodeFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData6"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="customerCodeLabel"
                                    text="Customer Code"
                                    design="Bold"
                                />
                                <SearchField
                                    id="customerCodeFilter"
                                    width="100%"
                                    placeholder="Filter by Customer Code"
                                    liveChange="onCustomerCodeFilterChange"
                                    showSearchButton="false"
                                />
                            </VBox>

                            <!-- Reference Key Filter -->
                            <VBox
                                id="referenceKeyFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData7"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="referenceKeyLabel"
                                    text="Reference Key"
                                    design="Bold"
                                />
                                <SearchField
                                    id="referenceKeyFilter"
                                    width="100%"
                                    placeholder="Filter by Reference Key"
                                    liveChange="onReferenceKeyFilterChange"
                                    showSearchButton="false"
                                />
                            </VBox>

                            <!-- Business Place Filter -->
                            <VBox
                                id="businessPlaceFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData8"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="businessPlaceLabel"
                                    text="Business Place"
                                    design="Bold"
                                />
                                <SearchField
                                    id="businessPlaceFilter"
                                    width="100%"
                                    placeholder="Filter by Business Place"
                                    liveChange="onBusinessPlaceFilterChange"
                                    showSearchButton="false"
                                />
                            </VBox>

                            <!-- Company Code Filter -->
                            <VBox
                                id="companyCodeFilterBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData9"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="companyCodeLabel"
                                    text="Company Code"
                                    design="Bold"
                                />
                                <SearchField
                                    id="companyCodeFilter"
                                    width="100%"
                                    placeholder="Filter by Company Code"
                                    liveChange="onCompanyCodeFilterChange"
                                    showSearchButton="false"
                                />
                            </VBox>

                            <!-- Reset Filters -->
                            <VBox
                                id="resetFiltersBox"
                                class="sapUiSmallMarginBottom"
                                justifyContent="End"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData10"
                                        span="L4 M6 S12"
                                    />
                                </layoutData>
                                <Label
                                    id="actionsLabel"
                                    text="Actions"
                                    design="Bold"
                                />
                                <Button
                                    id="resetFiltersBtn"
                                    text="Reset Filters"
                                    type="Transparent"
                                    icon="sap-icon://clear-filter"
                                    press="onResetFilters"
                                    width="20%"
                                />
                            </VBox>
                        </l:Grid>
                    </content>
                </Panel>

                <!-- Journal Entries Table with Enhanced Features -->
                <Table
                    id="journalEntriesTable"
                    items="{
                path: 'journalEntries>/transactions',
                templateShareable: false
            }"
                    growing="true"
                    growingThreshold="15"
                    alternateRowColors="true"
                    sticky="ColumnHeaders,HeaderToolbar"
                >
                    <headerToolbar>
                        <Toolbar id="tableHeaderToolbar">
                            <Title
                                id="entriesTableTitle"
                                text="Customer Vendor Journal Entries"
                            />
                            <Title
                                id="filteredCountTitle"
                                text="({journalEntries>/filteredCount} entries)"
                                titleStyle="H5"
                                class="sapUiTinyMarginBegin"
                            />
                            <ToolbarSpacer id="_IDGenToolbarSpacer3" />
                            <SegmentedButton
                                id="tableViewSelector"
                                selectionChange="onTableViewChange"
                                selectedKey="All"
                            >
                                <items>
                                    <SegmentedButtonItem
                                        id="allItemsBtn"
                                        text="All"
                                        key="All"
                                    />
                                    <SegmentedButtonItem
                                        id="validItemsBtn"
                                        text="Valid"
                                        key="Valid"
                                    />
                                    <SegmentedButtonItem
                                        id="invalidItemsBtn"
                                        text="Invalid"
                                        key="Invalid"
                                    />
                                </items>
                            </SegmentedButton>

                            <Button
                                id="refreshTableBtn"
                                icon="sap-icon://refresh"
                                tooltip="Refresh Table"
                                press="onResetFilters"
                                type="Emphasized"
                            />
                        </Toolbar>
                    </headerToolbar>

                    <columns>
                        <Column
                            id="sequenceIdColumn"
                            width="8%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText"
                                text="Sequence ID"
                            />
                        </Column>
                        <Column
                            id="refDocItemColumn"
                            width="8%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText1"
                                text="Ref Doc Item"
                            />
                        </Column>
                        <Column
                            id="CDIndicatorColumn"
                            width="10%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText2"
                                text="Credit/Debit"
                            />
                        </Column>
                        <Column
                            id="entityCodeColumn"
                            width="12%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText3"
                                text="Vendor/Customer Code"
                            />
                        </Column>
                        <Column
                            id="amountColumn"
                            width="18%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText6"
                                text="Amount"
                                textAlign="Right"
                            />
                        </Column>
                        <Column
                            id="assignColumn"
                            width="10%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText7"
                                text="Assignment"
                            />
                        </Column>
                        <Column
                            id="RefKeyColumn"
                            width="15%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText8"
                                text="Reference Key 1"
                            />
                        </Column>
                        <Column
                            id="businessPlaceColumn"
                            width="8%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText9"
                                text="Business Place"
                            />
                        </Column>
                        <Column
                            id="lineTypeColumn"
                            width="8%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText10"
                                text="Line Type"
                            />
                        </Column>
                        <Column
                            id="statusColumn"
                            width="6%"
                            hAlign="Begin"
                        >
                            <Text
                                id="_IDGenText11"
                                text="Status"
                            />
                        </Column>
                        <Column
                            id="actionsColumn"
                            width="4%"
                            hAlign="Center"
                        >
                            <Text
                                id="_IDGenText12"
                                text="Actions"
                            />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem
                            id="_IDGenColumnListItem"
                            type="Navigation"
                            press="onItemPress"
                        >
                            <cells>
                                <Text
                                    id="_IDGenText13"
                                    text="{journalEntries>Sequence ID}"
                                />
                                <Text
                                    id="_IDGenText14"
                                    text="{journalEntries>Reference Document Item}"
                                />
                                <Text
                                    id="_IDGenText15"
                                    text="{journalEntries>Indicator}"
                                />
                                <Text
                                    id="_IDGenText16"
                                    text="{= ${journalEntries>LineType} === 'Vendor' ? ${journalEntries>Vendor Code} : ${journalEntries>Customer Code} }"
                                />
                                <ObjectNumber
                                    id="_IDGenObjectNumber"
                                    number="{journalEntries>Amount}"
                                    state="{= ${journalEntries>Indicator} === 'S' ? 'Information' : 'Error'}"
                                    textAlign="Right"
                                    unit="{journalEntries>Currency}"
                                />
                                <Text
                                    id="_IDGenText18"
                                    text="{journalEntries>Assignment}"
                                />
                                <Text
                                    id="_IDGenText19"
                                    text="{journalEntries>Reference Key 1}"
                                />
                                <Text
                                    id="_IDGenText50"
                                    text="{journalEntries>Business Place}"
                                />
                                <Text
                                    id="_IDGenText59"
                                    text="{journalEntries>LineType}"
                                />
                                <ObjectStatus
                                    id="_IDGenObjectStatus"
                                    text="{journalEntries>status}"
                                    state="{= ${journalEntries>status} === 'Valid' ? 'Success' : 'Error'}"
                                    icon="{= ${journalEntries>status} === 'Valid' ? 'sap-icon://accept' : 'sap-icon://error'}"
                                />
                                <Button
                                    id="_IDGenButton"
                                    icon="sap-icon://detail-view"
                                    type="Transparent"
                                    press="onViewEntryDetails"
                                    tooltip="View Details"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                    <noData>
                        <MessageStrip
                            id="_IDGenMessageStrip2"
                            text="No journal entries are available. Please upload an Excel file to view entries."
                            type="Information"
                            showIcon="true"
                            class="sapUiMediumMargin"
                        />
                    </noData>
                </Table>
            </VBox>
        </content>
        <footer>
            <!-- Action Buttons -->
            <Toolbar id="actionToolbar">
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <Button
                    id="submitEntriesBtn"
                    text="Submit Entries"
                    type="Emphasized"
                    press="onSubmitJournalEntries"
                    enabled="{uploadSummary>/IsSubmitEnabled}"
                    icon="sap-icon://accept"
                />
                <Button
                    id="resetActionBtn"
                    text="{= ${uploadSummary>/ProcessingComplete} ? 'New Upload' : 'Clear All'}"
                    type="{= ${uploadSummary>/ProcessingComplete} ? 'Emphasized' : 'Transparent'}"
                    press="onResetAction"
                    enabled="{= ${uploadSummary>/TotalEntries} > 0}"
                    icon="{= ${uploadSummary>/ProcessingComplete} ? 'sap-icon://create-form' : 'sap-icon://clear-all'}"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
