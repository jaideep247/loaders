<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="_IDGenDialog"
        title="{success>/title}"
        contentWidth="60%"
        contentHeight="70%"
        resizable="true"
        draggable="true"
    >
        <VBox
            id="_IDGenVBox7"
            class="sapUiSmallMargin"
        >
            <Title
                id="_IDGenTitle1"
                text="{success>/message}"
                class="sapUiSmallMarginBottom"
            />

            <Panel
                id="_IDGenPanel"
                headerText="Posted Documents"
                expandable="true"
                expanded="true"
            >
                <Table
                    id="_IDGenTable"
                    items="{success>/documents}"
                    fixedLayout="false"
                    alternateRowColors="true"
                    growing="true"
                    growingThreshold="10"
                    growingScrollToLoad="true"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Text
                                id="_IDGenText45"
                                text="Sequence ID"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Text
                                id="_IDGenText46"
                                text="Document"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn3"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText47"
                                text="Company Code"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn4"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText22"
                                text="Fiscal Year"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn5"
                            width="30%"
                        >
                            <Text
                                id="_IDGenText23"
                                text="Status Message"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            id="_IDGenColumnListItem1"
                            type="Active"
                            press=".onDocumentItemPress"
                        >
                            <cells>
                                <Text
                                    id="_IDGenText48"
                                    text="{success>sequenceId}"
                                />
                                <ObjectIdentifier
                                    id="_IDGenObjectIdentifier"
                                    title="{success>documentNumber}"
                                    text="{success>formattedDocNumber}"
                                />
                                <Text
                                    id="_IDGenText49"
                                    text="{success>companyCode}"
                                />
                                <Text
                                    id="_IDGenText51"
                                    text="{success>fiscalYear}"
                                />
                                <Text
                                    id="_IDGenText52"
                                    text="{success>message}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </VBox>

        <buttons>
            <Button
                id="_IDGenButton10"
                text="Export to Excel"
                icon="sap-icon://excel-attachment"
                press=".onExportData"
            >
                <customData>
                    <core:CustomData
                        key="format"
                        value="xlsx"
                    />
                    <core:CustomData
                        key="type"
                        value="success"
                    />
                </customData>
            </Button>
            <Button
                id="_IDGenButton7"
                text="Export to CSV"
                icon="sap-icon://attachment-text-file"
                press=".onExportData"
            >
                <customData>
                    <core:CustomData
                        key="format"
                        value="csv"
                    />
                    <core:CustomData
                        key="type"
                        value="success"
                    />
                </customData>
            </Button>
            <Button
                id="_IDGenButton8"
                text="Export to PDF"
                icon="sap-icon://pdf-attachment"
                press=".onExportData"
            >
                <customData>
                    <core:CustomData
                        key="format"
                        value="pdf"
                    />
                    <core:CustomData
                        key="type"
                        value="success"
                    />
                </customData>
            </Button>
            <Button
                id="_IDGenButton9"
                text="Close"
                press=".onSuccessDialogClose"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
